<div class="container pt-5 mt-5">
  <div class="col-6 m-auto p-2">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, remote: true, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="d-flex align-items-center">
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-success" %>
        </div>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link" %>
      </div>
    <% end %>
    <div class="d-flex border-top pt-2 mt-2">
      <p>Do not have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-info" %></p>
    </div>
  </div>
</div>
